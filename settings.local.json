{
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(bash)",
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh",
            "statusMessage": "Loading project context..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/smart-inject-llm.sh",
            "statusMessage": "ðŸ§  Analyzing prompt with AI..."
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true
  }
}
